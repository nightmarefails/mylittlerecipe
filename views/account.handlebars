<main class="container">
    <div class="row">
        <div class="col">
            <section id="recipies">
                {{#each user.recipes as | recipe |}}
                <div class="card m-2">
                    <div class="card-body">
                        <h2 class="card-title">{{recipe.name}}</h2>
                        <h3 class="card-subtitle">{{recipe.users.0.first_name}} {{user.user_name}}</h3>
                        <p class="card-text">{{recipe.description}}</p>
                    </div>
                </div>
                {{/each}}
            </section>
        </div>
        <div class="col">
            <section>
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Welcome {{user.first_name}} {{user.last_name}}</h2>
                        <h3 class="card-subtitle">Manage your Recipes to the left!</h3>
                        <a class="m-2 btn btn-primary" href="/addrecipe">Add Recipe</a>
                    </div>
                </div>
            </section>
        </div>
    </div>
</main>